{
  "name": "rcm/html-area",
  "description": "A Reliv Content Manager Plugin for editable areas that allows you to add text, images, lists, links and more.",
  "license": "BSD-3-Clause",
  "keywords": [
    "reliv",
    "content",
    "manager",
    "plugin",
    "rcm"
  ],
  "homepage": "http://www.reliv.com/",
  "authors": [
    {
      "name": "Westin Shafer",
      "email": "wshafer@relivinc.com",
      "homepage": "http://www.reliv.com"
    },
    {
      "name": "Rod McNew",
      "email": "rmcnew@relivinc.com",
      "homepage": "http://www.reliv.com/"
    },
    {
      "name": "Brian Janish",
      "email": "bjanish@relivinc.com",
      "homepage": "http://www.reliv.com/"
    },
    {
      "name": "James Jervis",
      "email": "jjervis@relivinc.com",
      "homepage": "http://www.reliv.com/"
    },
    {
      "name": "Inna Davis",
      "email": "idavis@relivinc.com",
      "homepage": "http://www.reliv.com/"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "rwoverdijk/assetmanager": "1.*",
    "rcm/core": "^1.7.0",
    "rcm/core-js": "^1.0.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "2.*"
  },
  "autoload": {
    "psr-4": {
      "RcmHtmlArea\\": "src/"
    }
  },
  "extra": {
    "asset-pattern-skip-version": "(-patch*)",
    "asset-vcs-driver-options": {
      "github-no-api": true
    }
  },
  "config": {
    "asset-pattern-skip-version": "(-patch*)",
    "asset-installer-paths": {
      "bower-asset-library": "public/bower_components"
    }
  }
}
